---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="MyTempo Support">
  <main id="main" class="mx-auto max-w-3xl px-6 pb-section pt-4 sm:px-8 sm:pt-6">
    <section class="fade-up space-y-6" style="animation-delay: 120ms">
      <h2 class="section-title">MyTempo Support</h2>
      <p class="text-base leading-relaxed text-ink/90 sm:text-lg">
        If you have any issues or questions about MyTempo, please email
        <a href="mailto:connorrforsythe@gmail.com" class="underline hover:text-ink/80">
          connorrforsythe@gmail.com
        </a>
        and I will get back to you.
      </p>
    </section>
  </main>

  <Footer />
</BaseLayout>
